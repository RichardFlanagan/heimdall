extends ../layout

block content

  h1 Create User

  form(method='POST' action='/users')
    div.form-group
      label(for='username') Username:
      input#name.form-control(type='text', placeholder='' name='username')

    div.form-group
      label(for='password') Password:
      input#name.form-control(type='password', placeholder='' name='password')


    button.btn.btn-primary(type='submit') Create
